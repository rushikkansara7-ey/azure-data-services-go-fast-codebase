            <td>
                @Html.DisplayFor(modelItem => item.DefaultKeyVaultURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineJson)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogAnalyticsWorkspaceId)
            </td>
        </tr>
}
    </tbody>
</table>
