            <th>
                @Html.DisplayNameFor(model => model.DefaultKeyVaultURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineJson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogAnalyticsWorkspaceId)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
